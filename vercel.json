{
  "version": 2,
  "builds": [
    { "src": "frontend/**/*", "use": "@vercel/static-build" },
    { "src": "server/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
